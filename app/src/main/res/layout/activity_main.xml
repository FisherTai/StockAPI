<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.stockapi.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg1"
        android:padding="10dp"
        tools:context=".MainActivity">

        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:padding="10dp"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/loading_progress"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="5dp"
            android:background="@color/myColor3"
            android:stretchColumns="0"
            tools:layout_editor_absoluteX="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="4"
                    android:hint="Year"
                    android:inputType="date"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:theme="@style/textTheme" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/textTheme"
                    android:maxLength="6"
                    android:hint="Number"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:inputType="number" />

                <Button
                    android:id="@+id/btnRequest"
                    android:background="@drawable/bg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="#FFFFFF"
                    android:clickable="@{viewModel.btnRequest}"
                    android:text="查詢" />
            </TableRow>
            <TableLayout>
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目前僅能查詢每年的第一個交易日至最後一個交易日"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </TableLayout>
        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/myColor3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loading_progress"
            tools:layout_editor_absoluteX="10dp"
            android:stretchColumns="0,1,2,3,4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:theme="@style/textTheme"
                    android:text="年開盤價:" />

                <TextView
                    android:id="@+id/firstPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/textTheme"
                    android:text="@{viewModel.tvFirst}" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/textTheme"
                    android:text="年收盤價:" />

                <TextView
                    android:id="@+id/endPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/textTheme"
                    android:text="@{viewModel.tvEnd}" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/textTheme"
                    android:text="當年發放股票股利:" />

                <TextView
                    android:id="@+id/stockDividend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/textTheme"
                    android:text="@{viewModel.tvStockDividend}" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/textTheme"
                    android:text="當年發放現金股利:" />

                <TextView
                    android:id="@+id/cashDividend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/textTheme"
                    android:text="@{viewModel.tvCashDividend}" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/textTheme"
                    android:text="合計年報酬率:" />

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/textTheme"
                    android:text="@{viewModel.result}" />

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/result_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.tvCommon}"
            android:textSize="20sp"
            android:theme="@style/textTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>